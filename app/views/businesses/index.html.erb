<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Businesses</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Sobre</th>
        <th>Atendimento</th>
        <th>Rua</th>
        <th>Número</th>
        <th>Bairro</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th>Responsável</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @businesses.each do |business| %>
        <tr>
          <td><%= business.business_name %></td>
          <td><%= business.business_info %></td>
          <td><%= business.business_time %></td>
          <td><%= business.business_street %></td>
          <td><%= business.business_number %></td>
          <td><%= business.business_neighbor %></td>
          <td><%= business.business_city %></td>
          <td><%= business.business_state %></td>
          <td><%= business.user.name %></td>
          <td><%= link_to 'Ver', business %></td>
          <td><%= link_to 'Editar', edit_business_path(business) %></td>
          <td><%= link_to 'Deletar', business, method: :delete, data: { confirm: 'Tem certeza' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Business', new_business_path %>
</div>
