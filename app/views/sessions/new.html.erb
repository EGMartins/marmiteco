<div class="container">
  <div class="session-container animated fadeInLeft">
    <h1 class="center">Vamos entrar?</h1>
    <p><%= flash[:notice] %></p>

    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :email, 'E-mail:' %>
        <%= text_field_tag :email %>
      </p>
      <p>
        <%= label_tag :password, 'Senha:' %>
        <%= password_field_tag :password %>
      </p>
      <p>
        <%= submit_tag 'Entrar', class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
