<!DOCTYPE html>
<html>
  <head>
    <title>Marmiteco</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul id="dropdown1" class="dropdown-content">
      <% if session[:id].present? %>
        <li><%= link_to'Meu Negócio','' %></li>
        <li><%= link_to('Sair', session_path(1), method: :delete) %></li>
      <% else %>
        <li><%= link_to 'Entrar', new_session_path %></li>
        <li><%= link_to 'Cadastrar', new_user_path %></li>
      <% end %>
    </ul>

    <nav>
       <div class="nav-wrapper">
         <a href="#" class="brand-logo"><%= image_tag 'small_logo.png' %></a>
         <ul id="nav-mobile" class="right hide-on-med-and-down">
           <% if session[:id].present? %>
              <li><h4>Olá, <%= User.find(session[:id]).name %>! </h4></li>
              <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Usuário<i class="material-icons right">arrow_drop_down</i></a></li>
          <% else %>
              <li><%= link_to 'Home', root_path %></li>
              <li><a href="#">Sobre nós</a></li>
              <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Usuário<i class="material-icons right">arrow_drop_down</i></a></li>
           <% end %>
         </ul>
       </div>
     </nav>
    <%= yield %>
  </body>
</html>
