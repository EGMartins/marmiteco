    <script>
        new Card({
            form: document.querySelector('form'),
            container: '.card-wrapper',
            numberInput: '#card-number',
            expiryInput: '#card-month, #card-year',
            cvcInput: '#card-cvv',
            nameInput: '#card-name',

            placeholders: {
                number: '**** **** **** ****',
                name: 'Tony Stark',
                expiry: '**/****',
                cvc: '***'
            }
            
        });
    </script>